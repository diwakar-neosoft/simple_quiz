<%= form_with model: @admin_user, url: admin_user_path do |form| %>
  <% if @admin_user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@admin_user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @admin_user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row">
    <%= form.label :email,'Email Address', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-6">
      <%= form.text_field :email,class: "form-control col-6", placeholder: 'Enter Email' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :assign, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-4">
      <%= form.select :exam_id, Admin::Exam.all.map {|e| [e.name,e.id]},{},class: 'form-control' %>
    </div>
  </div>
  <div class="form-group form-check row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <%= form.check_box :appear, class: 'form-check-input' %>
      <%= form.label :Appear, class: 'form-check-label' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <%= form.submit 'Submit', class: 'btn btn-success' %>
    </div> 
  </div>
<% end %>